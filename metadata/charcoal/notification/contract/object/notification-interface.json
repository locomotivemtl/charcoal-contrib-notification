{
    "properties": {
        "id": {
            "type": "id",
            "mode": "uniqid"
        },
        "users": {
            "type": "object",
            "label": {
                "fr": "Utilisateur",
                "en": "User"
            },
            "objType": "charcoal/admin/user",
            "multiple": true,
            "pattern": "{{displayName}} ({{email}})"
        },
        "targetTypes": {
            "type": "object",
            "objType": "charcoal/notification/object/notification-target",
            "multiple": true,
            "label": {
                "fr": "Objets",
                "en": "Objects"
            },
            "pattern": "{{label}}"
        },
        "extraEmails":{
            "type":"email",
            "label": {
                "fr": "Courriel",
                "en": "Email"
            },
            "multiple":true
        },
        "frequency":{
            "type":"string",
            "label": {
                "fr": "Fréquence",
                "en": "Frequency"
            },
            "inputType": "charcoal/admin/property/input/select",
            "choices":{
                "minute":{
                    "label": {
                        "fr": "À chaque minute",
                        "en": "Every minute"
                    }
                },
                "hourly":{
                    "label": {
                        "fr": "À chaque heure",
                        "en": "Hourly"
                    }
                },
                "daily":{
                    "label": {
                        "fr": "Quotidiennement",
                        "en": "Daily"
                    }
                },
                "weekly":{
                    "label": {
                        "fr": "Hebdomadairement",
                        "en": "Weekly"
                    }
                },
                "yearly":{
                    "label": {
                        "fr": "À chaque année",
                        "en": "Yearly"
                    }
                }
            }
        },
        "active":{
            "type":"boolean"
        }
    }
}
